{
  "name": "siteline",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "dev": "npm run dev --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules/.cache",
    "lint": "npm run lint --workspace @siteline/core --workspace @siteline/nextjs --if-present",
    "lint:fix": "npm run lint:fix --workspace @siteline/core --workspace @siteline/nextjs --if-present",
    "lint:example": "npm run lint --workspace nextjs --if-present",
    "lint:all": "npm run lint --workspaces --if-present",
    "lint:all:fix": "npm run lint:fix --workspaces --if-present",
    "typecheck": "npm run build && npm run typecheck --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:coverage": "npm run test:coverage --workspaces --if-present",
    "release": "npm run build && npm run publish --workspaces --if-present"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint": "^9.39.2",
    "globals": "^17.3.0",
    "jest": "^30.2.0",
    "rollup": "^4.59.0",
    "ts-jest": "^29.4.6",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
